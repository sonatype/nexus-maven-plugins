<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>${itproject.groupId}</groupId>
  <artifactId>${itproject.artifactId}</artifactId>
  <version>${itproject.version}</version>
  <packaging>jar</packaging>

  <name>artifact</name>
  <description>Artifact</description>
  <url>http://maven.apache.org</url>
  <licenses>
    <license>
      <name>Eclipse Public License</name>
      <url>http://www.eclipse.org/legal/epl-v10.html</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/sonatype/nexus.git</connection>
    <developerConnection>scm:git:git@github.com:sonatype/nexus.git</developerConnection>
    <url>https://github.com/sonatype/nexus</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>local-nexus</id>
      <name>Releases</name>
      <url>http://localhost:${nexus.port}/nexus/content/repositories/releases/</url>
      <layout>default</layout>
    </repository>
    <snapshotRepository>
      <id>local-nexus</id>
      <name>Snapshots</name>
      <url>http://localhost:${nexus.port}/nexus/content/repositories/snapshots/</url>
      <layout>default</layout>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <version>${project.version}</version>
        <executions>
          <execution>
            <id>default-deploy</id>
            <phase>deploy</phase>
            <goals>
              <goal>deploy</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <nexusUrl>http://localhost:${nexus.port}/nexus/</nexusUrl>
          <serverId>local-nexus</serverId>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
