<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>${itproject.groupId}</groupId>
  <artifactId>${itproject.artifactId}</artifactId>
  <version>${itproject.version}</version>
  <packaging>pom</packaging>

  <name>artifact</name>
  <description>Artifact</description>
  <url>http://maven.apache.org</url>
  <licenses>
    <license>
      <name>Eclipse Public License</name>
      <url>http://www.eclipse.org/legal/epl-v10.html</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/sonatype/nexus.git</connection>
    <developerConnection>scm:git:git@github.com:sonatype/nexus.git</developerConnection>
    <url>https://github.com/sonatype/nexus</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>local-nexus</id>
      <name>Releases</name>
      <url>http://localhost:${nexus.port}/nexus/content/repositories/releases/</url>
      <layout>default</layout>
    </repository>
    <snapshotRepository>
      <id>local-nexus</id>
      <name>Snapshots</name>
      <url>http://localhost:${nexus.port}/nexus/content/repositories/snapshots/</url>
      <layout>default</layout>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <modules>
    <module>m1</module>
    <module>m2</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.8.1</version>
        <executions>
          <execution>
            <id>attach-javadoc</id>
            <phase>verify</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <version>${project.version}</version>
        <extensions>true</extensions>
        <configuration>
          <!-- all module will end up in 1st profile, except for m2 module -->
          <nexusUrl>http://localhost:${nexus.port}/nexus/</nexusUrl>
          <serverId>local-nexus</serverId>
          <autoDropAfterRelease>false</autoDropAfterRelease>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
